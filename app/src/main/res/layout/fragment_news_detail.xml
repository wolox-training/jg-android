<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/vSwipeRefreshLayout"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/vBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/news_static_spacing_large"
            android:layout_marginTop="@dimen/static_spacing_medium_extra" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/news_back_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/vBack"
            android:layout_marginStart="@dimen/static_spacing_medium_extra"
            android:layout_marginTop="@dimen/static_spacing_medium_extra" />

        <ImageView
            android:id="@+id/vNewsImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/news_background_image_height"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/vNewsTitle"
            android:layout_width="@dimen/news_detail_title_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/static_spacing_medium_extra"
            android:layout_marginTop="@dimen/news_static_spacing_large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vNewsImage"
            android:textColor="@color/colorAquaBlue"
            android:textStyle="bold"
            android:textSize="@dimen/font_large_extra"/>

        <TextView
            android:id="@+id/vNewsTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/news_static_spacing_large"
            android:layout_marginEnd="@dimen/static_spacing_medium_extra"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vNewsImage" />

        <TextView
            android:id="@+id/vNewsText"
            android:layout_width="@dimen/news_background_image_height"
            android:layout_height="@dimen/news_detail_text_height"
            android:layout_marginStart="@dimen/static_spacing_medium_extra"
            android:layout_marginTop="@dimen/static_spacing_medium_extra"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vNewsTitle" />

        <ImageView
            android:id="@+id/vNewsLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_big_extra"
            android:src="@drawable/news_like_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vNewsText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
