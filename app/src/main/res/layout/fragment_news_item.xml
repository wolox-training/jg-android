<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_medium_extra"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/vNewsImage"
        android:layout_width="@dimen/static_spacing_huge_extra"
        android:layout_height="@dimen/static_spacing_largest"
        android:layout_marginStart="@dimen/static_spacing_medium_extra"
        android:layout_marginTop="@dimen/spacing_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vNewsTitle"
        android:layout_width="@dimen/news_title_description_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium_extra"
        android:layout_marginEnd="@dimen/news_title_spacing_end"
        android:layout_marginStart="@dimen/spacing_huge"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="bold"
        android:textSize="@dimen/font_large_extra"
        app:layout_constraintEnd_toStartOf="@+id/vNewsTime"
        app:layout_constraintStart_toEndOf="@+id/vNewsImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vNewsDescription"
        android:layout_width="@dimen/news_title_description_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/news_title_desciption_end"
        android:layout_marginStart="@dimen/spacing_huge"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintEnd_toStartOf="@+id/vNewsLike"
        app:layout_constraintStart_toEndOf="@+id/vNewsImage"
        app:layout_constraintTop_toBottomOf="@id/vNewsTitle" />

    <TextView
        android:id="@+id/vNewsTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_marginEnd="@dimen/spacing_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/vNewsLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_large_extra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vNewsTime"
        android:src="@drawable/news_like_icon"/>

</androidx.constraintlayout.widget.ConstraintLayout>